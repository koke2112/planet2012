<div id="site_list">   <h1>Sitios encontrados: <%= @sites.length %></h1>    <table>   <% @sites.each do |site| %>    <tr>         <td class="list_description">         <dl>           <dt><%= link_to site.name, site %></dt>         </dl>       </td>    </tr>   <% end %>  </table> </div> <br />  <div    id="site_list"     >  <h1>Viajes encontrados: <%= @trips.length %></h1>    <table>   <% if @trips %>  <% @trips.each do |trip| %>    <tr>       <td class="list_description">         <dl>           <dt><%= link_to trip.name, trip_path(trip) %></dt>         </dl>       </td>      </tr>   <% end %>  <% end %>  </table> </div>